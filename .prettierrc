{
	"semi": false,
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"printWidth": 100,
	"tabWidth": 4,
	"endOfLine": "lf",
	"singleAttributePerLine": true,
	"plugins": ["prettier-plugin-tailwindcss"],
	"tailwindConfig": "./tailwind.config.js",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"tabWidth": 2
			}
		}
	]
}
